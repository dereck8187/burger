<div class="container text-center">

	
	

	
	<div class="row">
		
		<div class="col-md-12 text-center">
			
		  	<h1>Burgers!</h1>
		
		</div>
	
  	</div>

	
	<div class="row">
		
		<div class="col-md-6 text-center">

			<h2>Burgers!</h2>

						
		
		
		<div class="col-md-6 text-center">

			<h2>Burgers!</h2>

			<ol>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h3>
							{{this.burger_name}}
							
							<h3>

					        {{> burgers/delete-burger}}

						</li>
					{{/if}}
				{{/each}}
			</ol>
		
		</div>	
		
	
  	</div>

	
	<div class="row">
		
		<div class="col-md-12 text-center">
			<h1>Add a Burger</h1>
			<form class="create-update-form" action="burgers/create" method="POST">

				<div class="form-group">
					<label for="burger">Burger Name:</label>
					<input type="text" id="burger" name="name">
				</div>

				<button type="submit" class="btn btn-primary">Add Burger</button>
			</form>
		
		</div>
	
  	</div>



</div>